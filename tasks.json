{
    //qemu task for linux debug
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate compile_commands.json",
            "type": "process",
            "command": "python",
            "args": [
                "${workspaceRoot}/.vscode/generate_compdb.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "qemu",
            "type": "shell",
            "command": "setsid",
            "args": [
                "/usr/bin/terminator",
                "-x",
                "qemu-system-aarch64",
                "-kernel",
                "${workspaceFolder}/arch/arm64/boot/Image",
                "-initrd",
                "${workspaceFolder}/initrd.arm64",
                "-cpu",
                "cortex-a72",
                "-M",
                "virt",
                "-smp",
                "2",
                "-m",
                "2048",
                "-append",
                "loglevel=10 root=/dev/ram console=ttyAMA0 init=/init nokaslr",
                "-chardev",
                "stdio,id=ttys0,signal=off",
                "-serial",
                "chardev:ttys0",
                "-monitor",
                "tcp:127.0.0.1:1122,server,nowait",
                "-drive", "media=disk,file=/opt/linux/disk.qcow2,format=qcow2",
                "-nographic",
                "-S",
                "-s"
            ]
        }
    ]
}
